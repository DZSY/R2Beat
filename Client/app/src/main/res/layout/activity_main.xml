<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/mainbackground"
    tools:context="com.positif.r2beat.MainActivity"
    style="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        app:backgroundTint="#FFE4E1"
        android:src="@drawable/go"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPractice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="#FFE4E1"
        android:src="@drawable/practicemode"
        android:layout_alignTop="@id/fabOption"
        android:layout_toLeftOf="@id/fabOption"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@drawable/radiogroup"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <RadioButton
            android:id="@+id/singleradioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人模式"
            android:textStyle="bold"
            android:textColor="#000000"
            android:buttonTint="#000000"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/groupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对战模式"
            android:textStyle="bold"
            android:textColor="#000000"
            android:buttonTint="#000000" />
    </RadioGroup>

</RelativeLayout>
